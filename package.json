{
  "private": true,
  "name": "whatwas",
  "description": "WhatWas? - A simple, easy to use, and free to use, web application that allows you to take notes and save them for later.",
  "license": "MIT",
  "author": {
    "name": "Burak Saraloglu",
    "email": "buraksaraloglu1@gmail.com",
    "url": "https://buraksaraloglu.com"
  },
  "main": "./build/index.js",
  "scripts": {
    "build:remix": "remix build",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --minify",
    "build": "npm run build:css && npm run build:remix",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --watch",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "start": "remix-serve build",
    "lint": "eslint . --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-popover": "0.1.4",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@stitches/react": "^1.2.6",
    "@supabase/supabase-js": "^1.30.4",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "dotenv": "^16.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-icons": "^4.3.1",
    "remix": "1.2.0",
    "remix-seo": "^0.1.0",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-name": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
